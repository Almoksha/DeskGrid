<Window x:Class="DeskGrid.Views.PortalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeskGrid.Views"
        xmlns:vm="clr-namespace:DeskGrid.ViewModels"
        mc:Ignorable="d"
        Title="Portal"
        Width="300" Height="350"
        MinWidth="150" MinHeight="80"
        Left="100" Top="100"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        ResizeMode="CanResizeWithGrip"
        Topmost="False">

    <Window.Resources>
        <!-- Header Button Style -->
        <Style x:Key="HeaderButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#30FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#50FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Bool to Visibility Converter -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Zero to Visibility Converter -->
        <local:ZeroToVisibilityConverter x:Key="ZeroToVisibilityConverter"/>
    </Window.Resources>

    <Window.DataContext>
        <vm:PortalViewModel />
    </Window.DataContext>

    <Border x:Name="MainBorder"
            Background="{StaticResource PortalBackgroundBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border x:Name="HeaderBorder"
                    Grid.Row="0"
                    Background="{StaticResource PortalHeaderBrush}"
                    CornerRadius="8,8,0,0"
                    MouseLeftButtonDown="Header_MouseLeftButtonDown"
                    MouseMove="Header_MouseMove"
                    MouseLeftButtonUp="Header_MouseLeftButtonUp">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Title (read-only display) -->
                    <TextBlock x:Name="TitleText"
                               Grid.Column="0"
                               Text="{Binding Title}"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               FontFamily="{StaticResource PrimaryFont}"
                               FontSize="13"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"
                               TextTrimming="CharacterEllipsis"
                               MouseLeftButtonDown="TitleText_MouseLeftButtonDown"/>

                    <!-- Title Edit TextBox (hidden by default) -->
                    <TextBox x:Name="TitleEditBox"
                             Grid.Column="0"
                             Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                             Background="#30FFFFFF"
                             Foreground="{StaticResource TextPrimaryBrush}"
                             FontFamily="{StaticResource PrimaryFont}"
                             FontSize="13"
                             FontWeight="SemiBold"
                             VerticalAlignment="Center"
                             Margin="8,0,0,0"
                             Padding="4,2"
                             BorderThickness="1"
                             BorderBrush="{StaticResource AccentBrush}"
                             Visibility="Collapsed"
                             Focusable="True"
                             IsHitTestVisible="True"
                             LostFocus="TitleEditBox_LostFocus"
                             KeyDown="TitleEditBox_KeyDown"/>

                    <!-- Header Buttons -->
                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                Margin="0,0,4,0">
                        
                        <!-- Search Button -->
                        <Button x:Name="SearchButton"
                                Width="24" Height="24"
                                Click="SearchButton_Click"
                                Style="{StaticResource HeaderButtonStyle}"
                                ToolTip="Search (Ctrl+F)">
                            <Path Data="M10,2 A8,8 0 1 1 10,18 A8,8 0 1 1 10,2 M16,16 L22,22"
                                  Stroke="{StaticResource TextSecondaryBrush}"
                                  StrokeThickness="1.5"
                                  Width="12" Height="12"
                                  Stretch="Uniform"/>
                        </Button>
                        
                        <!-- Roll-up Button -->
                        <Button x:Name="RollUpButton"
                                Width="24" Height="24"
                                Click="RollUpButton_Click"
                                Style="{StaticResource HeaderButtonStyle}"
                                ToolTip="Roll Up">
                            <Path Data="M4,12 L12,4 L20,12"
                                  Stroke="{StaticResource TextSecondaryBrush}"
                                  StrokeThickness="1.5"
                                  Width="12" Height="8"
                                  Stretch="Uniform"
                                  RenderTransformOrigin="0.5,0.5">
                                <Path.RenderTransform>
                                    <RotateTransform x:Name="RollUpArrow" Angle="0"/>
                                </Path.RenderTransform>
                            </Path>
                        </Button>

                        <!-- Menu Button -->
                        <Button x:Name="MenuButton"
                                Width="24" Height="24"
                                Click="MenuButton_Click"
                                Style="{StaticResource HeaderButtonStyle}"
                                ToolTip="Menu">
                            <Path Data="M3,6 L21,6 M3,12 L21,12 M3,18 L21,18"
                                  Stroke="{StaticResource TextSecondaryBrush}"
                                  StrokeThickness="1.5"
                                  Width="12" Height="10"
                                  Stretch="Uniform"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Search Bar (collapsible) -->
            <Border x:Name="SearchBar" 
                    Grid.Row="1"
                    Background="{StaticResource PortalBackgroundBrush}"
                    Visibility="{Binding IsSearchVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid Margin="8,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="SearchTextBox"
                             Grid.Column="0"
                             Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                             Background="#20FFFFFF"
                             Foreground="{StaticResource TextPrimaryBrush}"
                             BorderThickness="1"
                             BorderBrush="{StaticResource BorderBrush}"
                             Padding="8,4"
                             FontSize="12"
                             VerticalContentAlignment="Center"
                             Focusable="True"
                             IsHitTestVisible="True"
                             KeyDown="SearchTextBox_KeyDown">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Focusable" Value="True"/>
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Tag" Value="Search files..."/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <Button Grid.Column="1"
                            Width="24" Height="24"
                            Margin="4,0,0,0"
                            Click="ClearSearchButton_Click"
                            Style="{StaticResource HeaderButtonStyle}"
                            ToolTip="Clear search">
                        <Path Data="M4,4 L20,20 M20,4 L4,20"
                              Stroke="{StaticResource TextSecondaryBrush}"
                              StrokeThickness="1.5"
                              Width="10" Height="10"
                              Stretch="Uniform"/>
                    </Button>
                </Grid>
            </Border>

            <!-- Content Area -->
            <Grid x:Name="ContentGrid" Grid.Row="2" AllowDrop="True"
                  Drop="ContentGrid_Drop"
                  DragEnter="ContentGrid_DragEnter"
                  DragLeave="ContentGrid_DragLeave"
                  DragOver="ContentGrid_DragOver">
                <!-- Loading Indicator -->
                <Border Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                        Background="{StaticResource PortalBackgroundBrush}">
                    <TextBlock Text="Loading..."
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>

                <!-- Items List -->
                <ListBox x:Name="ItemsListBox"
                         ItemsSource="{Binding FilteredItems}"
                         Background="Transparent"
                         BorderThickness="0"
                         Padding="8"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         VirtualizingPanel.IsVirtualizing="True"
                         VirtualizingPanel.VirtualizationMode="Recycling"
                         PreviewMouseLeftButtonDown="ItemsListBox_PreviewMouseLeftButtonDown">
                    
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>

                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Margin" Value="4"/>
                            <Setter Property="Padding" Value="8"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="ItemBorder"
                                                Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="ItemBorder" Property="Background" Value="#40FFFFFF"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource AccentBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Width="64" ToolTip="{Binding Name}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="48"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Icon -->
                                <Image Grid.Row="0"
                                       Source="{Binding Icon}"
                                       Width="48" Height="48"
                                       Stretch="Uniform"
                                       HorizontalAlignment="Center"/>

                                <!-- Name -->
                                <TextBlock Grid.Row="1"
                                           Text="{Binding Name}"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           FontSize="11"
                                           TextAlignment="Center"
                                           TextTrimming="CharacterEllipsis"
                                           TextWrapping="Wrap"
                                           MaxHeight="28"
                                           Margin="0,4,0,0"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Empty State -->
                <TextBlock Text="Folder is empty"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="12"
                           Visibility="{Binding Items.Count, Converter={StaticResource ZeroToVisibilityConverter}}"/>

                <!-- Drop Highlight Overlay -->
                <Border x:Name="DropHighlight"
                        Background="#407C3AED"
                        BorderBrush="{StaticResource AccentBrush}"
                        BorderThickness="2"
                        CornerRadius="4"
                        Visibility="Collapsed"
                        IsHitTestVisible="False">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ“¥" FontSize="32" HorizontalAlignment="Center"/>
                        <TextBlock Text="Drop files here" 
                                   Foreground="White" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Resize Grip (enhanced with hover effect) -->
            <Border Grid.Row="2"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Width="16" Height="16"
                    Background="Transparent"
                    Cursor="SizeNWSE"
                    Margin="0,0,2,2">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#30FFFFFF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Path Data="M0,12 L12,0 M4,12 L12,4 M8,12 L12,8"
                      Stroke="{StaticResource TextSecondaryBrush}"
                      StrokeThickness="1.5"
                      Width="12" Height="12"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Bottom"
                      Opacity="0.5"/>
            </Border>
        </Grid>
    </Border>
</Window>
