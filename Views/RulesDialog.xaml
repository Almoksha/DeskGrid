<Window x:Class="DeskGrid.Views.RulesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Portal Auto-Sort Rules"
        Width="450" Height="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Border Background="#F0181825"
            BorderBrush="#40FFFFFF"
            BorderThickness="1"
            CornerRadius="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" 
                    Background="#40FFFFFF" 
                    CornerRadius="12,12,0,0"
                    MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="⚙️ Auto-Sort Rules"
                               Foreground="White"
                               FontSize="14"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="16,0,0,0"/>
                    <Button Content="✕" 
                            HorizontalAlignment="Right"
                            Margin="0,0,8,0"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#888888"
                            FontSize="14"
                            Cursor="Hand"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>

            <!-- Rules List -->
            <Grid Grid.Row="1" Margin="16,8">
                <ListBox x:Name="RulesList"
                         Background="Transparent"
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#20FFFFFF" CornerRadius="8" Padding="12" Margin="0,4">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Name}" Foreground="White" FontSize="13" FontWeight="Medium"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                            <TextBlock Text="Pattern: " Foreground="#888888" FontSize="11"/>
                                            <TextBlock Text="{Binding Pattern}" Foreground="#7C3AED" FontSize="11"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                        <CheckBox IsChecked="{Binding IsEnabled}" 
                                                  Content="Enabled" 
                                                  Foreground="#888888" 
                                                  FontSize="11"
                                                  Margin="0,0,8,0"/>
                                        <Button Content="✕" 
                                                Background="Transparent" 
                                                BorderThickness="0"
                                                Foreground="#666666"
                                                FontSize="12"
                                                Cursor="Hand"
                                                Tag="{Binding}"
                                                Click="RemoveRule_Click"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Empty State -->
                <TextBlock Text="No rules configured. Add a rule to auto-organize files."
                           Foreground="#666666"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Visibility="{Binding HasNoRules, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </Grid>

            <!-- Footer Buttons -->
            <Border Grid.Row="2" BorderBrush="#30FFFFFF" BorderThickness="0,1,0,0">
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right"
                            Margin="16,0">
                    <Button Content="+ Add Rule" 
                            Click="AddRule_Click"
                            Background="#7C3AED"
                            Foreground="White"
                            Padding="16,8"
                            Cursor="Hand"
                            BorderThickness="0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
</Window>
